{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "allowJs": true,
        "jsx": "react",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true
    },
    "include": [
        "hooks/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "dist",
        "build",
        "lib"
    ]
}